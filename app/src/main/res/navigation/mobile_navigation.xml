<?xml version="1.0" encoding="utf-8"?><navigation xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:app="http://schemas.android.com/apk/res-auto"    xmlns:tools="http://schemas.android.com/tools"    android:id="@+id/mobile_navigation"    app:startDestination="@id/RegisterFragment">    <fragment        android:id="@+id/RegisterFragment"        android:name="com.example.aleppocollage.ui.register.RegisterFragment"        tools:layout="@layout/fragment_regsiter">        <action            android:id="@+id/action_navigationRegister_to_navigationRegisterStudent"            app:destination="@id/RegisterStudentFragment"            app:enterAnim="@anim/slide_in_right"            app:exitAnim="@anim/slide_out_left"            app:popEnterAnim="@anim/slide_in_left"            app:popExitAnim="@anim/slide_out_right" />        <action            android:id="@+id/actionRegisterFragmentToRegisterTeacherFragment"            app:destination="@id/RegisterTeacherFragment"            app:enterAnim="@anim/slide_in_right"            app:exitAnim="@anim/slide_out_left"            app:popEnterAnim="@anim/slide_in_left"            app:popExitAnim="@anim/slide_out_right" />    </fragment>    <fragment        android:id="@+id/RegisterTeacherFragment"        android:name="com.example.aleppocollage.ui.registerteacher.RegisterTeacherFragment"        tools:layout="@layout/fragment_register_teacher">        <action            android:id="@+id/actionRegisterTeacherFragmentToWorkStudentOrTeacherFragment"            app:destination="@id/workStudentOrTeacherFragment"            app:enterAnim="@anim/slide_in_right"            app:exitAnim="@anim/slide_out_left"            app:popEnterAnim="@anim/slide_in_left"            app:popExitAnim="@anim/slide_out_right" />    </fragment>    <fragment        android:id="@+id/RegisterStudentFragment"        android:name="com.example.aleppocollage.ui.registerstudent.RegisterStudentFragment"        tools:layout="@layout/fragment_register_student">        <action            android:id="@+id/actionNavigationRegisterStudentToWorkStudentOrTeacherFragment"            app:destination="@id/workStudentOrTeacherFragment"            app:enterAnim="@anim/slide_in_right"            app:exitAnim="@anim/slide_out_left"            app:popEnterAnim="@anim/slide_in_left"            app:popExitAnim="@anim/slide_out_right" />    </fragment>    <fragment        android:id="@+id/workStudentOrTeacherFragment"        android:name="com.example.aleppocollage.ui.workstudentorteacher.WorkStudentOrTeacherFragment"        android:label="fragment_work_student_or_teacher"        tools:layout="@layout/fragment_work_student_or_teacher">        <action            android:id="@+id/actionWorkStudentOrTeacherFragmentToNotificationFragment"            app:destination="@id/notificationFragment"            app:enterAnim="@anim/slide_in_top"            app:exitAnim="@anim/slide_out_bottom"            app:popEnterAnim="@anim/slide_in_bottom"            app:popExitAnim="@anim/slide_out_top" />        <action            android:id="@+id/actionWorkStudentOrTeacherFragmentToPaymentFragment"            app:destination="@id/paymentFragment"            app:enterAnim="@anim/slide_in_right"            app:exitAnim="@anim/slide_out_left"            app:popEnterAnim="@anim/slide_out_right"            app:popExitAnim="@anim/slide_out_right" />        <action            android:id="@+id/actionWorkStudentOrTeacherFragmentToTestFragment"            app:destination="@id/testFragment"            app:enterAnim="@anim/slide_in_right"            app:exitAnim="@anim/slide_out_left"            app:popEnterAnim="@anim/slide_in_left"            app:popExitAnim="@anim/slide_out_right" />        <action            android:id="@+id/actionWorkStudentOrTeacherFragmentToMarkFragment"            app:destination="@id/markFragment"            app:enterAnim="@anim/slide_in_right"            app:exitAnim="@anim/slide_out_left"            app:popEnterAnim="@anim/slide_out_right"            app:popExitAnim="@anim/slide_out_right" />        <action            android:id="@+id/actionWorkStudentOrTeacherFragmenToAbsenceTeacherFragment"            app:destination="@id/absenceTeacherFragment"            app:enterAnim="@anim/slide_in_right"            app:exitAnim="@anim/slide_out_left"            app:popEnterAnim="@anim/slide_in_left"            app:popExitAnim="@anim/slide_out_right" />        <action            android:id="@+id/actionWorkStudentOrTeacherFragmentToAbsenceStudentFragment"            app:destination="@id/absenceStudentFragment"            app:enterAnim="@anim/slide_in_right"            app:exitAnim="@anim/slide_out_left"            app:popEnterAnim="@anim/slide_in_left"            app:popExitAnim="@anim/slide_out_right" />        <action            android:id="@+id/actionWorkStudentOrTeacherFragmentToRegisterFragment"            app:destination="@id/RegisterFragment"            app:enterAnim="@anim/slide_in_left"            app:exitAnim="@anim/slide_out_right"            app:popEnterAnim="@anim/slide_in_right"            app:popExitAnim="@anim/slide_out_left"            app:popUpTo="@id/RegisterFragment" />    </fragment>    <fragment        android:id="@+id/absenceStudentFragment"        android:name="com.example.aleppocollage.ui.absencestudent.AbsenceStudentFragment"        android:label="fragment_absence_student"        tools:layout="@layout/fragment_absence_student" />    <fragment        android:id="@+id/absenceTeacherFragment"        android:name="com.example.aleppocollage.ui.absenceteacher.AbsenceTeacherFragment"        android:label="fragment_absence_teacher"        tools:layout="@layout/fragment_absence_teacher" />    <fragment        android:id="@+id/notificationFragment"        android:name="com.example.aleppocollage.ui.notification.NotificationFragment"        android:label="fragment_notification"        tools:layout="@layout/fragment_notification" />    <fragment        android:id="@+id/paymentFragment"        android:name="com.example.aleppocollage.ui.payment.PaymentFragment"        android:label="fragment_payment"        tools:layout="@layout/fragment_payment" />    <fragment        android:id="@+id/testFragment"        android:name="com.example.aleppocollage.ui.testteacher.TestFragment"        android:label="fragment_test"        tools:layout="@layout/fragment_test" />    <fragment        android:id="@+id/markFragment"        android:name="com.example.aleppocollage.ui.markstudent.MarkFragment"        android:label="fragment_mark"        tools:layout="@layout/fragment_mark" /></navigation>