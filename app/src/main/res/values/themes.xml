<resources xmlns:tools="http://schemas.android.com/tools">    <style name="Theme.AleppoCollage" parent="Theme.AppCompat.DayNight.NoActionBar">        <item name="colorPrimary">@color/colorPrimary</item>        <item name="colorPrimaryVariant">@color/colorPrimary</item>        <item name="colorOnPrimary">@color/colorWhite</item>        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>        <item name="android:windowTranslucentStatus" tools:targetApi="kitkat">true</item>        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>    </style>    <style name="DialogStyle" parent="Theme.Design.Light.BottomSheetDialog">        <item name="android:windowIsFloating">false</item>        <item name="android:windowSoftInputMode">adjustResize</item>        <item name="bottomSheetStyle">@style/bottomSheetBackground</item>    </style>    <style name="bottomSheetBackground" parent="">        <item name="android:background">@drawable/popup_background_rounded</item>    </style>    <style name="singleDateAndTimepicker" >        <item name="android:fontFamily">@font/cairo_regular</item>    </style>    <style name="FragmentStyle" parent="Theme.AppCompat.Light">        <item name="colorPrimary">@color/colorPrimary</item>        <item name="colorPrimaryVariant">@color/colorPrimary</item>        <item name="colorOnPrimary">@color/colorWhite</item>        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>        <item name="android:statusBarColor" tools:targetApi="l">@color/colorWhite</item>    </style>    <style name="toastTextStyle" parent="TextAppearance.AppCompat">        <item name="android:fontFamily">@font/cairo_regular</item>    </style>    <style name="popupMenuStyle" parent="@android:style/Widget.PopupMenu">        <item name="android:popupBackground">@drawable/bg_rounded_dialog</item>        <item name="android:fontFamily">@font/cairo_regular</item>        <item name="android:textSize">12sp</item>    </style></resources>