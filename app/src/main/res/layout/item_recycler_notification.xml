<?xml version="1.0" encoding="utf-8"?><androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:app="http://schemas.android.com/apk/res-auto"    android:layout_width="match_parent"    android:layout_height="wrap_content"    android:layout_margin="10dp"    android:clickable="true"    android:elevation="8dp"    android:focusable="true"    android:foreground="?attr/selectableItemBackground"    app:cardCornerRadius="18dp">    <RelativeLayout        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:background="@color/colorPurple">        <RelativeLayout            android:id="@+id/relativeRecyclerRecordTestShapWhite"            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:layout_marginEnd="10dp"            android:background="@drawable/bg_shap_notification">            <TextView                android:id="@+id/txtRecyclerNotificationTitle"                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:layout_centerHorizontal="true"                android:layout_marginTop="10dp"                android:fontFamily="@font/cairo_bold"                android:text="استمارة نظام معلوماتي لمدرسة"                android:textColor="@color/colorPurple"                android:textSize="16sp" />            <TextView                android:id="@+id/txtRecyclerNotificationInfo"                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:layout_below="@+id/txtRecyclerNotificationTitle"                android:layout_centerHorizontal="true"                android:layout_marginTop="10dp"                android:fontFamily="@font/cairo_regular"                android:paddingStart="10dp"                android:text="@string/aaa"                android:textColor="@color/colorPurple"                android:textSize="13sp" />        </RelativeLayout>        <RelativeLayout            android:layout_width="60dp"            android:layout_height="70dp"            android:layout_alignParentEnd="true"            android:layout_centerVertical="true">            <ImageView                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:layout_alignParentBottom="true"                android:layout_centerHorizontal="true"                android:src="@drawable/ic_notification_white" />        </RelativeLayout>        <TextView            android:id="@+id/txtRecyclerNotificationDate"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:layout_below="@+id/relativeRecyclerRecordTestShapWhite"            android:layout_margin="8dp"            android:layout_marginTop="10dp"            android:fontFamily="@font/cairo_regular"            android:text="10/3/2021"            android:textColor="@color/colorWhite"            android:textSize="13sp" />        <TextView            android:id="@+id/txtRecyclerNotificationTime"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:layout_below="@+id/relativeRecyclerRecordTestShapWhite"            android:layout_margin="8dp"            android:layout_marginTop="10dp"            android:layout_toEndOf="@+id/txtRecyclerNotificationDate"            android:fontFamily="@font/cairo_regular"            android:text="06:22 PM"            android:textColor="@color/colorWhite"            android:textSize="13sp" />    </RelativeLayout></androidx.cardview.widget.CardView>