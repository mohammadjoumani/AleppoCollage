<?xml version="1.0" encoding="utf-8"?><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"    android:layout_width="match_parent"    android:layout_height="wrap_content"    android:background="@color/colorWhite"    android:gravity="center"    android:orientation="vertical">    <ImageView        android:layout_width="150dp"        android:layout_height="150dp"        android:layout_gravity="center"        android:src="@drawable/ic_wifi" />    <TextView        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:fontFamily="@font/cairo_bold"        android:text="OPPS !"        android:textColor="@color/colorRed"        android:textSize="40sp" />    <TextView        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:layout_marginStart="40dp"        android:gravity="center"        android:layout_marginEnd="40dp"        android:fontFamily="@font/cairo_regular"        android:text="انقطع الاتصال بالانترنت"        android:textColor="@color/colorBlack"        android:textSize="22sp" />    <TextView        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:fontFamily="@font/cairo_light"        android:text="تأكد من اتصالك بالانترنت"        android:textColor="@color/colorPurple"        android:textSize="20sp"        android:layout_marginBottom="10dp"/></LinearLayout>