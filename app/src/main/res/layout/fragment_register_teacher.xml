<?xml version="1.0" encoding="utf-8"?><ScrollView xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:app="http://schemas.android.com/apk/res-auto"    xmlns:tools="http://schemas.android.com/tools"    android:layout_width="match_parent"    android:layout_height="match_parent"    android:fillViewport="true"    tools:context=".ui.registerTeacher.RegisterTeacherFragment">    <LinearLayout        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:orientation="vertical">        <RelativeLayout            android:layout_width="match_parent"            android:layout_height="0dp"            android:layout_weight="1.5"            android:background="@drawable/bg_register_student_teacher">            <RelativeLayout                android:id="@+id/relativeRegisterStudentNameCollage"                android:layout_width="match_parent"                android:layout_height="wrap_content"                android:layout_alignParentStart="true"                android:layout_alignParentTop="true"                android:layout_alignParentEnd="true"                android:layout_marginStart="8dp"                android:layout_marginTop="20dp"                android:layout_marginEnd="8dp">                <TextView                    android:layout_width="wrap_content"                    android:layout_height="wrap_content"                    android:layout_centerInParent="true"                    android:fontFamily="@font/cairo_black"                    android:text="@string/name_collage"                    android:textColor="@color/colorWhite"                    android:textSize="24sp" />                <ImageButton                    android:id="@+id/btnRegisterTeacherBack"                    android:layout_width="wrap_content"                    android:layout_height="wrap_content"                    android:layout_alignParentEnd="true"                    android:layout_centerInParent="true"                    android:background="@drawable/ic_back"                    android:elevation="4dp" />            </RelativeLayout>            <TextView                android:id="@+id/textView"                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:layout_below="@+id/relativeRegisterStudentNameCollage"                android:layout_centerHorizontal="true"                android:layout_marginBottom="30dp"                android:fontFamily="@font/cairo_black"                android:text="@string/app_name"                android:textColor="@color/colorWhite"                android:textSize="24sp" />            <ImageView                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:layout_below="@+id/textView"                android:layout_alignParentStart="true"                android:layout_alignParentBottom="true"                android:adjustViewBounds="true"                android:paddingStart="30dp"                android:scaleType="fitEnd"                android:src="@drawable/ic_man" />        </RelativeLayout>        <LinearLayout            android:layout_width="match_parent"            android:layout_height="0dp"            android:layout_weight="1"            android:orientation="vertical">            <TextView                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:layout_gravity="end"                android:layout_marginStart="20dp"                android:layout_marginTop="20dp"                android:layout_marginEnd="20dp"                android:layout_marginBottom="20dp"                android:fontFamily="@font/cairo_bold"                android:text="@string/register_teacher"                android:textColor="@color/colorPurpleText"                android:textSize="26sp" />            <Spinner                android:id="@+id/spinnerRegisterTeacherName"                android:layout_width="match_parent"                android:layout_height="wrap_content"                android:layout_marginStart="20dp"                android:layout_marginTop="16dp"                android:layout_marginEnd="20dp"                android:background="@drawable/bg_spinner_down"                android:elevation="2dp"                android:fontFamily="@font/cairo_regular"                android:paddingStart="18dp"                android:paddingEnd="18dp" />            <androidx.cardview.widget.CardView                android:layout_width="match_parent"                android:layout_height="wrap_content"                android:layout_marginStart="20dp"                android:layout_marginTop="16dp"                android:layout_marginEnd="20dp"                android:elevation="4dp"                app:cardCornerRadius="16dp">                <com.google.android.material.textfield.TextInputLayout                    android:layout_width="match_parent"                    android:layout_height="wrap_content"                    app:hintEnabled="false"                    app:passwordToggleDrawable="@drawable/selector_eye"                    app:passwordToggleEnabled="true"                    app:passwordToggleTint="#EB6D83">                    <com.google.android.material.textfield.TextInputEditText                        android:id="@+id/edtRegisterTeacherPassword"                        android:layout_width="match_parent"                        android:layout_height="match_parent"                        android:background="@drawable/bg_editetext_boder"                        android:fontFamily="@font/cairo_regular"                        android:gravity="end|center"                        android:hint="@string/password"                        android:inputType="textPassword"                        android:paddingStart="18dp"                        android:paddingEnd="18dp"                        android:textAlignment="viewEnd" />                </com.google.android.material.textfield.TextInputLayout>            </androidx.cardview.widget.CardView>            <Button                android:id="@+id/btnRegisterTeacherLogin"                android:layout_width="match_parent"                android:layout_height="wrap_content"                android:layout_marginStart="20dp"                android:layout_marginTop="16dp"                android:layout_marginEnd="20dp"                android:background="@drawable/bg_button_sign_in_purple"                android:elevation="4dp"                android:fontFamily="@font/cairo_bold"                android:text="@string/register"                android:textColor="@color/colorWhite"                android:textSize="16sp" />        </LinearLayout>    </LinearLayout></ScrollView>