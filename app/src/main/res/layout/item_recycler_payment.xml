<?xml version="1.0" encoding="utf-8"?><androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:app="http://schemas.android.com/apk/res-auto"    android:layout_width="match_parent"    android:layout_height="wrap_content"    android:layout_marginStart="@dimen/dmMarginItemPayment"    android:layout_marginEnd="@dimen/dmMarginItemPayment"    android:layout_marginBottom="@dimen/dmMarginItemPayment"    android:clickable="true"    android:focusable="true">    <RelativeLayout        android:id="@+id/relativeLayout3"        android:layout_width="match_parent"        android:layout_height="85dp"        android:layout_marginStart="20dp"        android:layout_marginTop="18dp"        android:layout_marginEnd="50dp"        android:gravity="center_horizontal"        android:background="@drawable/ic_card_payment_bottom"        app:layout_constraintBottom_toBottomOf="parent"        app:layout_constraintEnd_toStartOf="@+id/imageView4"        app:layout_constraintStart_toEndOf="@+id/view"        app:layout_constraintStart_toStartOf="parent"        app:layout_constraintTop_toTopOf="parent">        <TextView            android:id="@+id/text1"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:layout_above="@+id/text2"            android:layout_marginEnd="4dp"            android:fontFamily="@font/cairo_bold"            android:text="@string/strDatePayment"            android:textColor="@color/colorPrimary"            android:textSize="14sp" />        <TextView            android:id="@+id/text2"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:fontFamily="@font/cairo_bold"            android:text="دفعة عن شهر :"            android:layout_marginBottom="8dp"            android:layout_alignParentBottom="true"            android:layout_marginEnd="4dp"            android:textColor="@color/colorPrimary"            android:textSize="14sp"/>        <TextView            android:id="@+id/txtRecyclerPaymentDate"            android:layout_width="wrap_content"            android:layout_toEndOf="@+id/text1"            android:layout_height="wrap_content"            android:fontFamily="@font/cairo_bold"            android:text="10/5/2021"            android:layout_above="@+id/text2"            android:textColor="@color/colorPrimary"            android:textSize="14sp"/>        <TextView            android:id="@+id/txtRecyclerPaymentMonth"            android:layout_width="wrap_content"            android:layout_toEndOf="@+id/text2"            android:layout_height="wrap_content"            android:fontFamily="@font/cairo_bold"            android:text="10"            android:layout_alignParentBottom="true"            android:layout_marginBottom="8dp"            android:textColor="@color/colorPrimary"            android:textSize="14sp"/>    </RelativeLayout>    <View        android:id="@+id/view"        android:layout_width="0dp"        android:layout_height="31dp"        android:layout_marginTop="18.5dp"        android:layout_marginEnd="30dp"        android:background="@color/colorPrimary"        app:layout_constraintEnd_toEndOf="parent"        android:layout_marginStart="30dp"        app:layout_constraintStart_toStartOf="parent"        app:layout_constraintTop_toTopOf="parent" />    <ImageView        android:id="@+id/imageView4"        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:src="@drawable/ic_payment_top_left"        app:layout_constraintStart_toStartOf="parent"        app:layout_constraintTop_toTopOf="parent" />    <ImageView        android:id="@+id/imageView6"        android:layout_width="15dp"        android:layout_height="15dp"        android:src="@drawable/ic_double_arrow"        app:layout_constraintBottom_toBottomOf="@+id/view"        app:layout_constraintEnd_toStartOf="@+id/relativeLayout1"        app:layout_constraintTop_toTopOf="@+id/txtRecyclerPaymentPay" />    <TextView        android:id="@+id/txtRecyclerPaymentPay"        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:fontFamily="@font/cairo_bold"        android:text="25,000"        android:textColor="@color/colorWhite"        android:textSize="14sp"        app:layout_constraintBottom_toBottomOf="@+id/view"        app:layout_constraintEnd_toStartOf="@+id/imageView6"        app:layout_constraintStart_toEndOf="@id/imageView4"        app:layout_constraintTop_toTopOf="@+id/view" />    <LinearLayout        android:id="@+id/relativeLayout1"        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:layout_marginTop="8dp"        android:background="@drawable/ic_card_payment_left"        android:gravity="center"        app:layout_constraintBottom_toBottomOf="parent"        app:layout_constraintEnd_toEndOf="parent"        app:layout_constraintTop_toTopOf="parent">        <TextView            android:id="@+id/txtRecyclerPaymentNumber"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:fontFamily="@font/cairo_bold"            android:text="01"            android:textColor="@color/colorPrimary"            android:textSize="33sp" />    </LinearLayout></androidx.constraintlayout.widget.ConstraintLayout>