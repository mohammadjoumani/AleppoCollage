<?xml version="1.0" encoding="utf-8"?><androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:app="http://schemas.android.com/apk/res-auto"    xmlns:tools="http://schemas.android.com/tools"    android:layout_width="match_parent"    android:layout_height="match_parent"    android:background="@color/colorWhite"    tools:context=".ui.exam.teacher.ExamFragment">    <RelativeLayout        android:id="@+id/relativeMarkTeacherBar"        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:visibility="visible"        app:layout_constraintEnd_toEndOf="parent"        app:layout_constraintStart_toStartOf="parent"        app:layout_constraintTop_toTopOf="parent">        <androidx.cardview.widget.CardView            android:id="@+id/cardMarkTeacherProfile"            android:layout_width="@dimen/dmSizeCardButtonAppBar"            android:layout_height="@dimen/dmSizeCardButtonAppBar"            android:layout_alignParentEnd="true"            android:layout_centerVertical="true"            android:layout_marginTop="@dimen/dmMarginTop"            android:layout_marginEnd="@dimen/dmMarginEnd"            android:layout_marginBottom="5dp"            android:clickable="true"            android:elevation="@dimen/dmElevationButton"            android:focusable="true"            android:foreground="?attr/selectableItemBackground"            app:cardCornerRadius="@dimen/dmRadiusCardViewAppBar">            <ImageView                android:layout_width="@dimen/dmSizeIconImageAppBar"                android:layout_height="@dimen/dmSizeIconImageAppBar"                android:layout_gravity="center"                android:background="@drawable/ic_profile" />        </androidx.cardview.widget.CardView>        <androidx.cardview.widget.CardView            android:id="@+id/cardMarkTeacherBack"            android:layout_width="@dimen/dmSizeCardButtonAppBar"            android:layout_height="@dimen/dmSizeCardButtonAppBar"            android:layout_centerVertical="true"            android:layout_marginStart="@dimen/dmMarginStart"            android:layout_marginTop="@dimen/dmMarginTop"            android:layout_marginBottom="5dp"            android:clickable="true"            android:elevation="16dp"            android:focusable="true"            android:foreground="?attr/selectableItemBackground"            app:cardCornerRadius="@dimen/dmRadiusCardViewAppBar">            <ImageView                android:layout_width="@dimen/dmSizeIconBackAppBar"                android:layout_height="@dimen/dmSizeIconBackAppBar"                android:layout_gravity="center"                android:background="@drawable/ic_back_ward" />        </androidx.cardview.widget.CardView>        <TextView            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:layout_centerVertical="true"            android:layout_marginStart="@dimen/dmMarginStart"            android:layout_toEndOf="@+id/cardMarkTeacherBack"            android:fontFamily="@font/cairo_black"            android:text="@string/strMarkStudent"            android:textColor="@color/colorPrimary"            android:textSize="@dimen/dmTextSizeTitleTextView" />    </RelativeLayout>    <androidx.constraintlayout.widget.ConstraintLayout        android:layout_width="match_parent"        android:layout_height="0dp"        app:layout_constraintBottom_toTopOf="@+id/btnMarkTeacherSave"        app:layout_constraintEnd_toEndOf="parent"        app:layout_constraintStart_toStartOf="parent"        app:layout_constraintTop_toBottomOf="@+id/relativeMarkTeacherBar">        <RelativeLayout            android:id="@+id/relativeLayout2"            android:layout_width="match_parent"            android:layout_height="match_parent"            app:layout_constraintBottom_toBottomOf="parent"            app:layout_constraintEnd_toEndOf="parent"            app:layout_constraintStart_toStartOf="parent"            app:layout_constraintTop_toTopOf="parent">            <androidx.recyclerview.widget.RecyclerView                android:id="@+id/recyclerMarkTeacher"                android:layout_width="match_parent"                android:layout_height="wrap_content"                android:layout_marginTop="@dimen/dmHalfMarginTop"                android:orientation="vertical"                android:paddingStart="@dimen/dmHalfMarginStart"                android:paddingEnd="@dimen/dmHalfMarginEnd"                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"                tools:listitem="@layout/item_recycler_mark_teacher" />            <!--        Shimmer for Test-->            <com.facebook.shimmer.ShimmerFrameLayout                android:id="@+id/shimmerAnimationMarkTeacher"                android:layout_width="match_parent"                android:layout_height="wrap_content"                android:layout_alignParentStart="true"                android:visibility="gone">                <LinearLayout                    android:layout_width="match_parent"                    android:layout_height="wrap_content"                    android:orientation="vertical">                    <ImageView                        android:layout_width="match_parent"                        android:layout_height="match_parent"                        android:layout_marginStart="16dp"                        android:adjustViewBounds="true"                        android:src="@drawable/item_shimmer_exam_student" />                    <ImageView                        android:layout_width="match_parent"                        android:layout_height="match_parent"                        android:layout_marginStart="16dp"                        android:adjustViewBounds="true"                        android:src="@drawable/item_shimmer_exam_student" />                    <ImageView                        android:layout_width="match_parent"                        android:layout_height="match_parent"                        android:layout_marginStart="16dp"                        android:adjustViewBounds="true"                        android:src="@drawable/item_shimmer_exam_student" />                    <ImageView                        android:layout_width="match_parent"                        android:layout_height="match_parent"                        android:layout_marginStart="16dp"                        android:adjustViewBounds="true"                        android:src="@drawable/item_shimmer_exam_student" />                    <ImageView                        android:layout_width="match_parent"                        android:layout_height="match_parent"                        android:layout_marginStart="16dp"                        android:adjustViewBounds="true"                        android:src="@drawable/item_shimmer_exam_student" />                </LinearLayout>            </com.facebook.shimmer.ShimmerFrameLayout>        </RelativeLayout>        <ImageView            android:id="@+id/imgMarkTeacherChooseGroup"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:src="@drawable/ic_aplus"            app:layout_constraintBottom_toBottomOf="parent"            app:layout_constraintEnd_toEndOf="parent"            app:layout_constraintStart_toStartOf="parent"            app:layout_constraintTop_toTopOf="@+id/relativeLayout2" />    </androidx.constraintlayout.widget.ConstraintLayout>    <Button        android:id="@+id/btnMarkTeacherSave"        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:background="@color/colorPrimary"        android:clickable="true"        android:focusable="true"        android:fontFamily="@font/cairo_bold"        android:foreground="?attr/selectableItemBackground"        android:text="@string/strSave"        android:textColor="@color/colorWhite"        android:textSize="@dimen/dmTextSizeButton"        app:layout_constraintBottom_toBottomOf="parent"        app:layout_constraintEnd_toEndOf="parent"        app:layout_constraintStart_toStartOf="parent" /></androidx.constraintlayout.widget.ConstraintLayout>