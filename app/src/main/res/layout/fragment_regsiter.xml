<?xml version="1.0" encoding="utf-8"?><ScrollView xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:app="http://schemas.android.com/apk/res-auto"    xmlns:tools="http://schemas.android.com/tools"    android:layout_width="match_parent"    android:layout_height="match_parent"    android:background="@drawable/bg_register"    android:fillViewport="true"    tools:context=".ui.register.RegisterFragment">    <androidx.constraintlayout.widget.ConstraintLayout        android:layout_width="match_parent"        android:layout_height="wrap_content">        <LinearLayout            android:id="@+id/linearNameCollage"            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:gravity="center"            android:orientation="vertical"            app:layout_constraintBottom_toTopOf="@+id/relativeRegisterStudent"            app:layout_constraintEnd_toEndOf="parent"            app:layout_constraintStart_toStartOf="parent"            app:layout_constraintTop_toTopOf="parent">            <TextView                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:fontFamily="@font/cairo_black"                android:text="@string/name_collage"                android:textColor="@color/colorWhite"                android:textSize="24sp" />            <TextView                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:fontFamily="@font/cairo_black"                android:text="@string/app_name"                android:textColor="@color/colorWhite"                android:textSize="24sp" />        </LinearLayout>        <RelativeLayout            android:id="@+id/relativeRegisterStudent"            android:layout_width="match_parent"            android:layout_height="wrap_content"            app:layout_constraintBottom_toTopOf="@+id/relativeRegisterTeacher"            app:layout_constraintEnd_toEndOf="parent"            app:layout_constraintHorizontal_bias="0.0"            app:layout_constraintStart_toStartOf="parent"            app:layout_constraintTop_toBottomOf="@+id/linearNameCollage">            <ImageView                android:id="@+id/imgRegisterStudent"                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:layout_centerHorizontal="true"                android:src="@drawable/ic_register_student" />            <Button                android:id="@+id/btnRegisterStudent"                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:layout_below="@+id/imgRegisterStudent"                android:layout_centerHorizontal="true"                android:layout_marginTop="8dp"                android:background="@drawable/bg_button_sign_in"                android:fontFamily="@font/cairo_black"                android:paddingStart="35dp"                android:paddingEnd="35dp"                android:text="@string/register_student"                android:textColor="@color/colorPurple"                android:textSize="16sp"                app:layout_constraintBottom_toBottomOf="parent"                app:layout_constraintEnd_toEndOf="parent"                app:layout_constraintStart_toStartOf="parent"                app:layout_constraintTop_toTopOf="parent" />        </RelativeLayout>        <RelativeLayout            android:id="@+id/relativeRegisterTeacher"            android:layout_width="match_parent"            android:layout_height="wrap_content"            app:layout_constraintBottom_toBottomOf="parent"            app:layout_constraintEnd_toEndOf="parent"            app:layout_constraintStart_toStartOf="parent"            app:layout_constraintTop_toBottomOf="@+id/relativeRegisterStudent">            <ImageView                android:id="@+id/imgRegisterTeacher"                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:layout_centerHorizontal="true"                android:src="@drawable/ic_register_teacher" />            <Button                android:id="@+id/btnRegisterTeacher"                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:layout_below="@+id/imgRegisterTeacher"                android:layout_centerHorizontal="true"                android:layout_marginTop="8dp"                android:background="@drawable/bg_button_sign_in"                android:elevation="16dp"                android:fontFamily="@font/cairo_black"                android:paddingStart="35dp"                android:paddingEnd="35dp"                android:text="@string/register_teacher"                android:textColor="@color/colorPurple"                android:textSize="16sp" />        </RelativeLayout>    </androidx.constraintlayout.widget.ConstraintLayout></ScrollView>