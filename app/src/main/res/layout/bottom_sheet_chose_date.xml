<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical">

    <View
        android:layout_marginTop="5dp"
        android:id="@+id/viewLine1"
        android:layout_width="100dp"
        android:layout_height="5dp"
        android:layout_centerInParent="true"
        android:background="@drawable/bg_gray" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/cairo_semi_bold"
        android:text="@string/chose_date"
        android:textColor="@color/colorPurple"
        android:textSize="26sp" />


    <com.github.florent37.singledateandtimepicker.SingleDateAndTimePicker
        android:id="@+id/datepiker"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        app:fontFamily="@font/cairo_bold"
        app:picker_curved="false"
        app:picker_cyclic="true"
        app:picker_displayDays="false"
        app:picker_displayDaysOfMonth="true"
        app:picker_displayHours="false"
        app:picker_displayMinutes="false"
        app:picker_displayMonth="true"
        app:picker_displayYears="false"
        app:picker_selectedTextColor="@color/purple_700"
        app:picker_selectorColor="@color/purple_500"
        app:picker_textAlign="center"
        app:picker_textColor="@color/colorPurple"
        app:picker_textSize="20sp"
        app:picker_visibleItemCount="5" />

    <Button
        android:id="@+id/btnChoseDate"
        android:layout_marginTop="15dp"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:textColor="@color/colorWhite"
        android:background="@drawable/bg_button_sign_in_purple"
        android:layout_marginBottom="20dp"
        android:fontFamily="@font/cairo_bold"
        android:textSize="16sp"
        android:text="@string/chose" />

</LinearLayout>