<?xml version="1.0" encoding="utf-8"?><androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:app="http://schemas.android.com/apk/res-auto"    xmlns:tools="http://schemas.android.com/tools"    android:layout_width="match_parent"    android:layout_height="match_parent"    android:background="@color/colorWhite"    tools:context=".ui.exam.teacher.ExamFragment">    <RelativeLayout        android:id="@+id/relativeExamBar"        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:visibility="visible"        app:layout_constraintEnd_toEndOf="parent"        app:layout_constraintStart_toStartOf="parent"        app:layout_constraintTop_toTopOf="parent">        <androidx.cardview.widget.CardView            android:id="@+id/cardExamProfile"            android:layout_width="@dimen/dmSizeCardButtonAppBar"            android:layout_height="@dimen/dmSizeCardButtonAppBar"            android:layout_alignParentEnd="true"            android:layout_centerVertical="true"            android:layout_marginTop="@dimen/dmMarginTop"            android:layout_marginEnd="@dimen/dmMarginEnd"            android:layout_marginBottom="5dp"            android:clickable="true"            android:elevation="@dimen/dmElevationButton"            android:focusable="true"            android:foreground="?attr/selectableItemBackground"            app:cardCornerRadius="@dimen/dmRadiusCardViewAppBar">            <ImageView                android:layout_width="@dimen/dmSizeIconImageAppBar"                android:layout_height="@dimen/dmSizeIconImageAppBar"                android:layout_gravity="center"                android:background="@drawable/ic_profile" />        </androidx.cardview.widget.CardView>        <androidx.cardview.widget.CardView            android:id="@+id/cardExamBack"            android:layout_width="@dimen/dmSizeCardButtonAppBar"            android:layout_height="@dimen/dmSizeCardButtonAppBar"            android:layout_centerVertical="true"            android:layout_marginStart="@dimen/dmMarginStart"            android:layout_marginTop="@dimen/dmMarginTop"            android:layout_marginBottom="5dp"            android:clickable="true"            android:elevation="16dp"            android:focusable="true"            android:foreground="?attr/selectableItemBackground"            app:cardCornerRadius="@dimen/dmRadiusCardViewAppBar">            <ImageView                android:layout_width="@dimen/dmSizeIconBackAppBar"                android:layout_height="@dimen/dmSizeIconBackAppBar"                android:layout_gravity="center"                android:background="@drawable/ic_back_ward" />        </androidx.cardview.widget.CardView>        <TextView            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:layout_centerVertical="true"            android:layout_marginStart="@dimen/dmMarginStart"            android:layout_toEndOf="@+id/cardExamBack"            android:fontFamily="@font/cairo_black"            android:text="@string/strTest"            android:textColor="@color/colorPrimary"            android:textSize="@dimen/dmTextSizeTitleTextView" />    </RelativeLayout>    <!--    getExams-->    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout        android:id="@+id/swipeRefreshExam"        android:layout_width="match_parent"        android:layout_height="0dp"        app:layout_constraintBottom_toBottomOf="parent"        app:layout_constraintEnd_toEndOf="parent"        app:layout_constraintStart_toStartOf="parent"        app:layout_constraintTop_toBottomOf="@+id/relativeExamBar">        <androidx.core.widget.NestedScrollView            android:layout_width="match_parent"            android:layout_height="match_parent"            android:fillViewport="true">            <androidx.constraintlayout.widget.ConstraintLayout                android:layout_width="match_parent"                android:layout_height="wrap_content">                <RelativeLayout                    android:id="@+id/relativeLayout"                    android:layout_width="match_parent"                    android:layout_height="0dp"                    app:layout_constraintEnd_toEndOf="parent"                    app:layout_constraintStart_toStartOf="parent"                    app:layout_constraintTop_toTopOf="parent">                    <Spinner                        android:id="@+id/spinnerExamYear"                        android:layout_width="match_parent"                        android:layout_height="wrap_content"                        android:layout_marginStart="@dimen/dmMarginStart"                        android:layout_marginTop="@dimen/dmHalfMarginTop"                        android:layout_marginEnd="@dimen/dmMarginEnd"                        android:layout_marginBottom="@dimen/dmHalfMarginBottom"                        android:background="@drawable/bg_spinner_down"                        android:dropDownVerticalOffset="50dp"                        android:elevation="@dimen/dmElevationSpinner"                        android:fontFamily="@font/cairo_regular" />                    <RelativeLayout                        android:id="@+id/relativeExamSpinnerDepartment"                        android:layout_width="match_parent"                        android:layout_height="wrap_content"                        android:layout_below="@+id/spinnerExamYear">                        <RelativeLayout                            android:layout_width="match_parent"                            android:layout_height="wrap_content">                            <Spinner                                android:id="@+id/spinnerExamGroup"                                android:layout_width="match_parent"                                android:layout_height="wrap_content"                                android:layout_marginStart="@dimen/dmMarginStart"                                android:layout_marginTop="@dimen/dmHalfMarginTop"                                android:layout_marginEnd="@dimen/dmMarginEnd"                                android:layout_marginBottom="@dimen/dmHalfMarginBottom"                                android:background="@drawable/bg_spinner_down"                                android:dropDownVerticalOffset="50dp"                                android:elevation="@dimen/dmElevationSpinner"                                android:fontFamily="@font/cairo_regular" />                        </RelativeLayout>                        <com.wang.avi.AVLoadingIndicatorView                            android:id="@+id/aviExamSpinnerGroup"                            android:layout_width="@dimen/dmAviWidthSpinner"                            android:layout_height="@dimen/dmAviHeightSpinner"                            android:layout_centerVertical="true"                            android:layout_marginStart="@dimen/dmMarginStartSpinner"                            android:visibility="gone"                            app:indicatorColor="@color/colorPrimary"                            app:indicatorName="BallSpinFadeLoaderIndicator"                            tools:visibility="visible" />                        <TextView                            android:id="@+id/txtExamSpinnerGroup"                            android:layout_width="wrap_content"                            android:layout_height="wrap_content"                            android:layout_centerVertical="true"                            android:layout_marginStart="@dimen/dmMarginStartSpinner"                            android:fontFamily="@font/cairo_regular"                            android:text="لا يوجد اقسام"                            android:textColor="@color/colorPrimary"                            android:textSize="@dimen/dmTextSizeSpinner"                            android:visibility="gone"                            tools:visibility="visible" />                    </RelativeLayout>                    <Button                        android:id="@+id/btnExamRecordExam"                        android:layout_width="match_parent"                        android:layout_height="wrap_content"                        android:layout_below="@+id/relativeExamSpinnerDepartment"                        android:layout_marginStart="@dimen/dmMarginStart"                        android:layout_marginTop="@dimen/dmHalfMarginTop"                        android:layout_marginEnd="@dimen/dmMarginEnd"                        android:background="@drawable/bg_button_sign_in_purple"                        android:elevation="@dimen/dmElevationButton"                        android:fontFamily="@font/cairo_bold"                        android:text="@string/strRecordTest"                        android:textColor="@color/colorWhite"                        android:textSize="@dimen/dmTextSizeButton" />                </RelativeLayout>                <ImageView                    android:id="@+id/imgExamChooseGroup"                    android:layout_width="wrap_content"                    android:layout_height="wrap_content"                    android:src="@drawable/ic_aplus"                    app:layout_constraintBottom_toBottomOf="parent"                    app:layout_constraintEnd_toEndOf="parent"                    app:layout_constraintStart_toStartOf="parent"                    app:layout_constraintTop_toBottomOf="@+id/relativeLayout" />                <RelativeLayout                    android:layout_width="match_parent"                    android:layout_height="0dp"                    app:layout_constraintBottom_toBottomOf="parent"                    app:layout_constraintEnd_toEndOf="parent"                    app:layout_constraintStart_toStartOf="parent"                    app:layout_constraintTop_toBottomOf="@+id/relativeLayout">                    <androidx.recyclerview.widget.RecyclerView                        android:id="@+id/recyclerExam"                        android:layout_width="match_parent"                        android:layout_height="wrap_content"                        android:layout_marginTop="@dimen/dmHalfMarginTop"                        android:orientation="vertical"                        android:paddingStart="@dimen/dmHalfMarginStart"                        android:paddingEnd="@dimen/dmHalfMarginEnd"                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"                        tools:listitem="@layout/item_recycler_record_exam" />                    <!--        Shimmer for Exam-->                    <com.facebook.shimmer.ShimmerFrameLayout                        android:id="@+id/shimmerAnimationExam"                        android:layout_width="match_parent"                        android:layout_height="wrap_content"                        android:layout_alignParentStart="true"                        android:visibility="gone">                        <LinearLayout                            android:layout_width="match_parent"                            android:layout_height="wrap_content"                            android:orientation="vertical">                            <include layout="@layout/item_recycler_mark_shimmer" />                            <include layout="@layout/item_recycler_mark_shimmer" />                            <include layout="@layout/item_recycler_mark_shimmer" />                            <include layout="@layout/item_recycler_mark_shimmer" />                        </LinearLayout>                    </com.facebook.shimmer.ShimmerFrameLayout>                </RelativeLayout>            </androidx.constraintlayout.widget.ConstraintLayout>        </androidx.core.widget.NestedScrollView>    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>       <!--    summary-->    <LinearLayout        android:id="@+id/linearDeliveredExamInformation"        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:orientation="vertical"        android:visibility="gone"        app:layout_constraintBottom_toBottomOf="parent"        app:layout_constraintEnd_toEndOf="parent"        app:layout_constraintStart_toStartOf="parent">        <androidx.cardview.widget.CardView            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:layout_marginStart="16dp"            android:layout_marginTop="4dp"            android:layout_marginEnd="16dp"            android:layout_marginBottom="4dp"            android:clickable="true"            android:elevation="8dp"            android:focusable="true"            android:foreground="?attr/selectableItemBackground"            android:padding="8dp"            app:cardCornerRadius="8dp">            <LinearLayout                android:layout_width="match_parent"                android:layout_height="wrap_content"                android:gravity="start">                <ImageView                    android:layout_width="wrap_content"                    android:layout_height="wrap_content"                    android:layout_gravity="center_vertical"                    android:layout_marginStart="8dp"                    android:layout_marginTop="8dp"                    android:layout_marginBottom="8dp"                    android:src="@drawable/ic_calender" />                <TextView                    android:id="@+id/txtDeliveredExamDate"                    android:layout_width="wrap_content"                    android:layout_height="wrap_content"                    android:layout_gravity="center_vertical"                    android:layout_marginStart="25dp"                    android:fontFamily="@font/cairo_light"                    android:text="15-2-2020"                    android:textColor="@color/colorBlack"                    android:textSize="16sp" />            </LinearLayout>        </androidx.cardview.widget.CardView>        <androidx.cardview.widget.CardView            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:layout_marginStart="16dp"            android:layout_marginTop="4dp"            android:layout_marginEnd="16dp"            android:layout_marginBottom="4dp"            android:clickable="true"            android:elevation="8dp"            android:focusable="true"            android:foreground="?attr/selectableItemBackground"            android:padding="8dp"            app:cardCornerRadius="8dp">            <LinearLayout                android:layout_width="match_parent"                android:layout_height="wrap_content"                android:gravity="start">                <ImageView                    android:layout_width="wrap_content"                    android:layout_height="wrap_content"                    android:layout_gravity="center_vertical"                    android:layout_marginStart="8dp"                    android:layout_marginTop="8dp"                    android:layout_marginBottom="8dp"                    android:src="@drawable/ic_class_white" />                <TextView                    android:id="@+id/txtDeliveredExamDepartment"                    android:layout_width="wrap_content"                    android:layout_height="wrap_content"                    android:layout_gravity="center_vertical"                    android:layout_marginStart="25dp"                    android:fontFamily="@font/cairo_light"                    android:text="الفئة الخامسة"                    android:textColor="@color/colorBlack"                    android:textSize="16sp" />            </LinearLayout>        </androidx.cardview.widget.CardView>        <androidx.cardview.widget.CardView            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:layout_marginStart="16dp"            android:layout_marginTop="4dp"            android:layout_marginEnd="16dp"            android:layout_marginBottom="4dp"            android:clickable="true"            android:elevation="8dp"            android:focusable="true"            android:foreground="?attr/selectableItemBackground"            android:padding="8dp"            app:cardCornerRadius="8dp">            <LinearLayout                android:layout_width="match_parent"                android:layout_height="wrap_content"                android:gravity="start">                <ImageView                    android:layout_width="wrap_content"                    android:layout_height="wrap_content"                    android:layout_gravity="center_vertical"                    android:layout_marginStart="8dp"                    android:layout_marginTop="8dp"                    android:layout_marginBottom="8dp"                    android:src="@drawable/ic_class_purple" />                <TextView                    android:layout_width="wrap_content"                    android:layout_height="wrap_content"                    android:layout_gravity="center_vertical"                    android:layout_marginStart="25dp"                    android:fontFamily="@font/cairo_light"                    android:text="عدد الطلاب :"                    android:textColor="@color/colorBlack"                    android:textSize="16sp" />                <TextView                    android:id="@+id/txtDeliveredExamNumberOfStudent"                    android:layout_width="wrap_content"                    android:layout_height="wrap_content"                    android:layout_gravity="center_vertical"                    android:layout_marginStart="2dp"                    android:fontFamily="@font/cairo_light"                    android:text="50"                    android:textColor="@color/colorBlack"                    android:textSize="16sp" />            </LinearLayout>        </androidx.cardview.widget.CardView>        <androidx.cardview.widget.CardView            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:layout_marginStart="16dp"            android:layout_marginTop="4dp"            android:layout_marginEnd="16dp"            android:layout_marginBottom="4dp"            android:clickable="true"            android:elevation="8dp"            android:focusable="true"            android:foreground="?attr/selectableItemBackground"            android:padding="8dp"            app:cardCornerRadius="8dp">            <LinearLayout                android:layout_width="match_parent"                android:layout_height="wrap_content"                android:gravity="start">                <ImageView                    android:layout_width="wrap_content"                    android:layout_height="wrap_content"                    android:layout_gravity="center_vertical"                    android:layout_marginStart="8dp"                    android:layout_marginTop="8dp"                    android:layout_marginBottom="8dp"                    android:src="@drawable/ic_checked" />                <TextView                    android:layout_width="wrap_content"                    android:layout_height="wrap_content"                    android:layout_gravity="center_vertical"                    android:layout_marginStart="25dp"                    android:fontFamily="@font/cairo_light"                    android:text="عدد الطلاب المسجلة علاماتهم :"                    android:textColor="@color/colorBlack"                    android:textSize="16sp" />                <TextView                    android:id="@+id/txtDeliveredExamNumberOfStudentTrue"                    android:layout_width="wrap_content"                    android:layout_height="wrap_content"                    android:layout_gravity="center_vertical"                    android:layout_marginStart="2dp"                    android:fontFamily="@font/cairo_light"                    android:text="30"                    android:textColor="@color/colorBlack"                    android:textSize="16sp" />            </LinearLayout>        </androidx.cardview.widget.CardView>        <androidx.cardview.widget.CardView            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:layout_marginStart="16dp"            android:layout_marginTop="4dp"            android:layout_marginEnd="16dp"            android:layout_marginBottom="4dp"            android:clickable="true"            android:elevation="8dp"            android:focusable="true"            android:foreground="?attr/selectableItemBackground"            android:padding="8dp"            app:cardCornerRadius="8dp">            <LinearLayout                android:layout_width="match_parent"                android:layout_height="wrap_content"                android:gravity="start">                <ImageView                    android:layout_width="wrap_content"                    android:layout_height="wrap_content"                    android:layout_gravity="center_vertical"                    android:layout_marginStart="8dp"                    android:layout_marginTop="8dp"                    android:layout_marginBottom="8dp"                    android:src="@drawable/ic_unchecked" />                <TextView                    android:layout_width="wrap_content"                    android:layout_height="wrap_content"                    android:layout_gravity="center_vertical"                    android:layout_marginStart="25dp"                    android:fontFamily="@font/cairo_light"                    android:text="عدد الطلاب الغير مسجلة علاماتهم :"                    android:textColor="@color/colorBlack"                    android:textSize="16sp" />                <TextView                    android:id="@+id/txtDeliveredExamNumberOfStudentFalse"                    android:layout_width="wrap_content"                    android:layout_height="wrap_content"                    android:layout_gravity="center_vertical"                    android:layout_marginStart="2dp"                    android:fontFamily="@font/cairo_light"                    android:text="20"                    android:textColor="@color/colorBlack"                    android:textSize="16sp" />            </LinearLayout>        </androidx.cardview.widget.CardView>        <androidx.cardview.widget.CardView            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:layout_marginStart="16dp"            android:layout_marginTop="4dp"            android:layout_marginEnd="16dp"            android:layout_marginBottom="4dp"            android:clickable="true"            android:elevation="8dp"            android:focusable="true"            android:foreground="?attr/selectableItemBackground"            android:padding="8dp"            app:cardCornerRadius="8dp">            <LinearLayout                android:layout_width="match_parent"                android:layout_height="wrap_content"                android:gravity="start">                <ImageView                    android:layout_width="wrap_content"                    android:layout_height="wrap_content"                    android:layout_gravity="center_vertical"                    android:layout_marginStart="8dp"                    android:layout_marginTop="8dp"                    android:layout_marginBottom="8dp"                    android:src="@drawable/ic_class_green" />                <TextView                    android:layout_width="wrap_content"                    android:layout_height="wrap_content"                    android:layout_gravity="center_vertical"                    android:layout_marginStart="25dp"                    android:fontFamily="@font/cairo_light"                    android:text="عدد الطلاب الحصور"                    android:textColor="@color/colorBlack"                    android:textSize="16sp" />                <TextView                    android:id="@+id/txtDeliveredExamNumberOfStudentPresent"                    android:layout_width="30dp"                    android:layout_height="30dp"                    android:layout_marginStart="3dp"                    android:background="@drawable/bg_green_light"                    android:fontFamily="@font/cairo_light"                    android:gravity="center"                    android:text="30"                    android:textColor="@color/colorWhite" />            </LinearLayout>        </androidx.cardview.widget.CardView>        <androidx.cardview.widget.CardView            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:layout_marginStart="16dp"            android:layout_marginTop="8dp"            android:layout_marginEnd="16dp"            android:layout_marginBottom="8dp"            android:clickable="true"            android:elevation="8dp"            android:focusable="true"            android:foreground="?attr/selectableItemBackground"            android:padding="8dp"            app:cardCornerRadius="8dp">            <LinearLayout                android:layout_width="match_parent"                android:layout_height="wrap_content"                android:gravity="start">                <ImageView                    android:layout_width="wrap_content"                    android:layout_height="wrap_content"                    android:layout_gravity="center_vertical"                    android:layout_marginStart="8dp"                    android:layout_marginTop="8dp"                    android:layout_marginBottom="8dp"                    android:src="@drawable/ic_class_red" />                <TextView                    android:layout_width="wrap_content"                    android:layout_height="wrap_content"                    android:layout_gravity="center_vertical"                    android:layout_marginStart="25dp"                    android:fontFamily="@font/cairo_light"                    android:text="عدد الطلاب الغائبين"                    android:textColor="@color/colorBlack"                    android:textSize="16sp" />                <TextView                    android:id="@+id/txtDeliveredExamNumberOfStudentAttendance"                    android:layout_width="30dp"                    android:layout_height="30dp"                    android:layout_marginStart="3dp"                    android:background="@drawable/bg_rounded_red"                    android:fontFamily="@font/cairo_regular"                    android:gravity="center"                    android:text="20"                    android:textColor="@color/colorWhite" />            </LinearLayout>        </androidx.cardview.widget.CardView>    </LinearLayout></androidx.constraintlayout.widget.ConstraintLayout>